<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div class="alert alert-warning mb-4">
      Há alguns erros no formulário, confira:

      <ul class="m-0">
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :image, "Imagem do curso" %>

        <% if course.image.attached? %>
          <span>
            (<%= link_to "imagem atual: #{course.image.filename}", url_for(course.image), target: '_blank' %>)
          </span>
        <% end %>

        <%= form.file_field :image, class: 'file-image' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name, "Nome do curso" %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :duration, "Duração do curso", class: 'm-0' %>
        <div class="text-muted mb-2">Ex: 1 semana, 1 mês</div>
        <%= form.text_field :duration, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :when, "Data do curso" %>
        <br>
        <%= form.date_select :when, { order: [:day, :month, :year], start_year: Date.today.year }, { class: "custom-select" } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :price, "Preço do curso (em R$)" %>
        <%= form.text_field :price, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :about, "Descrição do curso" %>
        <%= form.rich_text_area :about %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="actions d-flex justify-content-between">
        <%= form.submit class: 'btn btn-success' %>
        <%= link_to 'Cancelar', courses_path, class: 'btn btn-light' %>
      </div>
    </div>
  </div>
<% end %>
